<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    >

    <include android:id="@+id/toolbar" layout="@layout/tool_bar"/>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:elevation="5dp"
        app:cardBackgroundColor="@color/white"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_vertical_margin"
            android:orientation="horizontal">
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/geefter_profile_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:border_color="@color/white"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.9"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:id="@+id/geefter"
                android:layout_gravity="center">

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/geefter_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="@string/user_name"
                    android:textColor="#666"
                    android:textSize="14sp"/>

                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/location"
                    android:text="location"
                    android:layout_width="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:layout_height="wrap_content"
                    android:textSize="13sp"/>
            </LinearLayout>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/choose_geefted"
                android:theme="@style/GreenButtonStyle"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>