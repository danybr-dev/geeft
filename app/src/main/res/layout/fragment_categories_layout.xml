<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  xmlns:app="http://schemas.android.com/apk/res-auto"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="wrap_content">
        <android.support.design.widget.AppBarLayout
            android:id="@+id/fragment_appbar_layout"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:theme="@style/AppTheme.AppBarOverlay"
            app:popupTheme="@style/AppTheme.PopupOverlay"
            >

            <include android:id="@+id/feedback_page_toolbar" layout="@layout/tool_bar"/>


        </android.support.design.widget.AppBarLayout>

        <GridLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/GridLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:rowCount="5"
            tools:context=".GridXMLActivity" >
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_cloth"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_cloth_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_cloth_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_house"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:layout_weight="1"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_house_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_house_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_electronics"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_electronics_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_electronics_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_4"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_films"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_films_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_media_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_kids"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_kids_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_kids_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_sports"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_sports_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_sports_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_7"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_motor"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_motor_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_motor_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_8"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_services"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_services_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_services_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card="http://schemas.android.com/apk/res-auto"
                android:id="@+id/category_9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                card:cardCornerRadius="2dp"
                card:cardElevation="7dp"
                >
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <ImageView
                        android:id="@+id/category_other"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        android:background="@color/colorPrimaryDark"/>
                    <TextView
                        android:id="@+id/category_other_id"
                        android:layout_width="150dp"
                        android:layout_height="40dp"
                        android:text="@string/categories_other_text"
                        android:textColor="@color/colorPrimaryText"
                        android:textSize="16sp"/>
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </GridLayout>


    </LinearLayout>
</ScrollView>