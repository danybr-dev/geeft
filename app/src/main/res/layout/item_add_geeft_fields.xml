<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        cardView:cardCornerRadius="0dp"
        cardView:cardElevation="5dp"
        cardView:cardPreventCornerOverlap="true"
        cardView:paddingEnd="@dimen/item_touch_helper_max_drag_scroll_per_frame"
        android:focusableInTouchMode="false"
        android:focusable="false"
        android:id="@+id/add_geeft_image_card">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:background="#6b6b6b"
            android:id="@+id/geeft_add_photo_frame"
            />
        <ImageButton
            android:id="@+id/geeft_photo_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_menu_camera_white_24dp"
            android:layout_gravity="bottom|end"
            android:background="#00ffffff"
            android:padding="15dp"
            android:paddingBottom="10dp"
            android:layout_alignBottom="@id/geeft_add_photo_frame"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"/>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        cardView:cardCornerRadius="0dp"
        cardView:cardElevation="5dp"
        cardView:cardPreventCornerOverlap="true"
        android:focusableInTouchMode="false"
        android:focusable="false">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/add_geeft_image_card"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:id="@+id/geeft_form_field">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                >
                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:text="Geeft name"-->
                <!--android:textSize="@dimen/geeft_title_text_size"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingTop="@dimen/activity_vertical_margin"/>-->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#00ffffff"
                    android:src="@drawable/ic_object_given_form"/>
                <EditText
                    android:id="@+id/fragment_add_geeft_form_name"
                    android:textColor="@color/colorPrimaryText"
                    android:singleLine="true"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:hint="@string/add_gift_name_hint"
                    android:textColorHint="@color/colorHintAccent"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin"
                >

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="top"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#00ffffff"
                    android:src="@drawable/ic_description_black_24dp"/>
                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:text="Geeft description"-->
                <!--android:textSize="@dimen/geeft_title_text_size"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingTop="@dimen/activity_vertical_margin"/>-->

                <EditText
                    android:id="@+id/fragment_add_geeft_form_description"
                    android:textColor="@color/colorPrimaryText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="@string/add_geeft_description_hint"
                    android:textColorHint="@color/colorHintAccent"
                    />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="@dimen/activity_vertical_margin"
                android:orientation="horizontal">

                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:text="Geeft location"-->
                <!--android:textSize="@dimen/geeft_title_text_size"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingTop="@dimen/activity_vertical_margin"/>-->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#00ffffff"
                    android:src="@drawable/ic_location_on"/>
                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:hint="Where you want to consign the geeft"/>-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Spinner
                        android:id="@+id/form_field_location_spinner"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.65"
                        android:spinnerMode="dropdown"
                        >
                    </Spinner>
                    <EditText
                        android:id="@+id/form_field_location_cap"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:maxLength="5"
                        android:inputType="number"
                        android:hint="CAP zona"
                        android:textColorHint="@color/colorHintAccent"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#00ffffff"
                    android:src="@drawable/ic_av_timer_black_24dp"/>
                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:hint="Where you want to consign the geeft"/>-->
                <Spinner
                    android:id="@+id/expire_time_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    >
                </Spinner>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="@dimen/activity_vertical_margin">
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#00ffffff"
                    android:src="@drawable/ic_edit_black_24dp"/>
                <!--<EditText-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="match_parent"-->
                <!--android:hint="Where you want to consign the geeft"/>-->
                <Spinner
                    android:id="@+id/categories_spinner"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:spinnerMode="dropdown"
                    >
                </Spinner>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"

        cardView:cardCornerRadius="0dp"
        cardView:cardElevation="5dp"
        cardView:cardPreventCornerOverlap="true"
        android:focusableInTouchMode="false"
        android:focusable="false"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <!--<TextView-->
                <!--android:layout_width="match_parent"-->
                <!--android:text="Geeft name"-->
                <!--android:textSize="@dimen/geeft_title_text_size"-->
                <!--android:textColor="@android:color/black"-->
                <!--android:layout_height="match_parent"-->
                <!--android:paddingTop="@dimen/activity_vertical_margin"/>-->
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:paddingEnd="@dimen/activity_horizontal_margin"
                    android:paddingRight="@dimen/activity_horizontal_margin"
                    android:background="#00ffffff"
                    android:src="@drawable/ic_label_black_24dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:textColor="@color/colorPrimaryText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/fragment_add_geeft_label_title"
                        />

                    <EditText
                        android:id="@+id/fragment_add_geeft_labels"
                        android:textColor="@color/colorPrimaryText"
                        android:singleLine="true"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/add_geeft_label_hint"
                        android:textColorHint="@color/colorHintAccent"
                        />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        cardView:cardCornerRadius="0dp"
        cardView:cardElevation="5dp"
        cardView:cardPreventCornerOverlap="true"
        android:focusableInTouchMode="false"
        android:focusable="false"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin">
                <TextView
                    android:paddingTop="5dp"
                    android:id="@+id/automatic_geefter_selection"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/automatic_selection_text"
                    android:textSize="@dimen/geeft_title_text_size"
                    android:textColor="@android:color/black"
                    />
                <CheckBox
                    android:id="@+id/automatic_selection_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/automatic_geefter_selection"
                    android:layout_alignRight="@+id/automatic_geefter_selection"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                >
                <TextView
                    android:id="@+id/allow_communication"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/allow_communication_string"
                    android:textSize="@dimen/geeft_title_text_size"
                    android:textColor="@android:color/black"
                    />
                <CheckBox
                    android:id="@+id/allow_communication_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/allow_communication"
                    android:layout_alignRight="@+id/allow_communication"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin"
                >
                <TextView
                    android:id="@+id/geeft_dimension"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/geeft_dimension_text"
                    android:textSize="@dimen/geeft_title_text_size"
                    android:textColor="@android:color/black"
                    />
                <CheckBox
                    android:id="@+id/geeft_dimension_checkbox"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignEnd="@+id/geeft_dimension"
                    android:layout_alignRight="@+id/geeft_dimension"
                    />
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <EditText
                        android:id="@+id/geeft_height"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:maxLength="5"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:inputType="number"
                        android:hint="@string/geeft_height_text"
                        android:textColorHint="@color/colorHintAccent"/>
                    <EditText
                        android:id="@+id/geeft_width"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:maxLength="5"
                        android:textAlignment="center"
                        android:visibility="gone"
                        android:inputType="number"
                        android:hint="@string/geeft_width_text"
                        android:textColorHint="@color/colorHintAccent"/>
                    <EditText
                        android:id="@+id/geeft_depth"
                        android:layout_width="100dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.35"
                        android:singleLine="true"
                        android:textColor="@color/colorPrimaryText"
                        android:maxLength="5"
                        android:textAlignment="center"
                        android:inputType="number"
                        android:visibility="gone"
                        android:hint="@string/geeft_depth_text"
                        android:textColorHint="@color/colorHintAccent"/>
                </LinearLayout>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
