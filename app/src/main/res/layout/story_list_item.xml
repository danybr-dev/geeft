<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cardView="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    cardView:cardCornerRadius="2dp"
    cardView:cardElevation="4dp"
    cardView:cardPreventCornerOverlap="true"
    cardView:paddingEnd="@dimen/item_touch_helper_max_drag_scroll_per_frame"
    android:focusableInTouchMode="false"
    android:focusable="false">

    <LinearLayout
        android:id="@+id/geeft_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/geeft_image"
                android:contentDescription="the view contatin the image of the geeft"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:background="@android:color/darker_gray"
                android:scaleType="fitXY">
            </ImageView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#46000000"
                android:layout_gravity="bottom">
                <TextView
                    android:id="@+id/geeft_name"
                    android:text="Geeft name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:padding="@dimen/activity_horizontal_margin"
                    android:textColor="@color/white"
                    android:textSize="@dimen/geeft_title_text_size_large"
                    android:layout_gravity="left|bottom"/>
            </LinearLayout>
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:baselineAligned="false"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/geeft_signalisation"
                android:background="@drawable/ripple_effect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="@dimen/activity_horizontal_margin"
                android:gravity="center"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Segnala"/>
                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.1"
                    android:src="@drawable/ic_flag_black_24dp"
                    android:background="#00ffffff"
                    android:clickable="false"
                    android:paddingStart="3dp"
                    android:paddingLeft="3dp"
                    android:visibility="visible"
                    android:layout_gravity="center_vertical|start"
                    />
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/ripple_effect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="@dimen/activity_horizontal_margin"
                android:gravity="center"
                />
            <LinearLayout
                android:background="@drawable/ripple_effect"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:padding="@dimen/activity_horizontal_margin"
                android:gravity="center"
                />
       </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>